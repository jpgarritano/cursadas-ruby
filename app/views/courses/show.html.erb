<p id="notice"><%= notice %></p>

<p>
  <h1>Cursada <%= @course.year %></h1>
  
</p>

<% if (@course.students.length > 0) %>
<table class="table">
  <thead>
    <tr>
      <th>Estudiante</th>
      <th colspan="3">Operaciones</th>
    </tr>
  </thead>

  <tbody>
    <% @course.students.each do |student| %>
      <tr>
        <td><%= student %></td>
        <td><%= link_to 'Ver', student %></td>
        <td><%= link_to 'Editar', edit_student_path(student) %></td>
        <td><%= link_to 'Borrar', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h3> No hay estudiantes asignados a esta cursada </h3>
<% end %>

<%= link_to 'Editar', edit_course_path(@course) %> |
<%= link_to 'Volver', courses_path %>
