<%#= simple_form_for [@course,@test], url: course_tests_path do |f| para new %>
<%#= simple_form_for [@course,@test], url: course_test_path do |f| para edit %>
<%= simple_form_for [@test.course,@test] do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :date %>
    <%= f.input :minimum_grade, as: :float %>
    <%= f.association :course, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit ,"Aceptar", class: 'btn btn-success' %>
  </div>
<% end %>
