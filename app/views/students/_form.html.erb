<%= simple_form_for(@student) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :lastname %>
    <%= f.input :email %>
    <%= f.input :legajo %>
    <%= f.input :doc %>
    <%= f.association :courses %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
